
{{ define "content" }}

<div class="container">



    <div class="arealist-items">
{{ range .Areas }}
        <a class="arealist-item-wrap" href="/echo/{{ .Name }}">
            <div class="arealist-item">
                <div class="arealist-item-echoid">{{ .Name }}</div>
                <div class="arealist-item-count">{{ .MessageCount }}</div>
            </div>
        </a>
{{ end }}
    </div>
    <div class="main">

    <div class="actions">
        <div class="action-cover">
            <a href="/echo/{{ .Area.Name }}/message/{{ .Msg.Hash }}/reply">
                <div class="action">
                    <span>Reply</span>
                </div>
            </a>
        </div>
        <div class="action-cover">
            <a href="/echo/{{ .Area.Name }}/message/{{ .Msg.Hash }}/remove">
                <div class="action">
                    <span>Remove</span>
                </div>
            </a>
        </div>
    </div>

        <div class="message-preview">

{{ .Content }}

        </div>
    </div>
</div>

{{ end }}
